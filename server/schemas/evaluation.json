{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "answers": {
            "type": "array",
            "minItems": 2,
            "items": {
                "type": "object",
                "properties": {
                    "question_id": {
                        "type": "integer"
                    },
                    "option_ids": {
                        "type": "array",
                        "minItems": 1,
                        "uniqueItems": true,
                        "items": {
                            "type": "integer"
                        }
                    }
                },
                "required": [
                    "question_id",
                    "option_ids"
                ]
            }
        }
    },
    "required": [
        "answers"
    ]
}
